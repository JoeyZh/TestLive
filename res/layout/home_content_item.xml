<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/home_content_item_padding" >

    <ImageView
        android:id="@+id/home_content_item_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:src="@drawable/recorded_normal"
        android:background="@android:color/transparent" />

    <TextView
        android:id="@+id/home_content_item_title"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="top"
        android:layout_marginBottom="@dimen/home_content_item_margin_bottom"
        android:gravity="center_horizontal|bottom"
        android:text="@string/remote" />

</merge>