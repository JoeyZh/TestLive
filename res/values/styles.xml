<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 直播分组样式 -->
    <style name="top_menu_text_style">
        <item name="android:textSize">@dimen/top_menu_text_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="channel_name_text_style">
        <item name="android:textSize">@dimen/channel_name_text_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="channel_num_text_style">
        <item name="android:textSize">@dimen/epg_name_text_size</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="channel_epg_text_style">
        <item name="android:textSize">@dimen/channel_epg_text_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:singleLine">true</item>
    </style>
    
     <style name="epg_text_style">
        <item name="android:textSize">@dimen/epg_name_text_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:singleLine">true</item>
    </style>
    
     <style name="description_text_style">
        <item name="android:textSize">@dimen/description_text_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
    </style>
    	<!-- 遥控器按钮样式 -->
   <style name="remote_btn_style">
  	<item name="android:layout_width">@dimen/tvremote_key_width</item> 
  	<item name="android:layout_height">@dimen/tvremote_key_height</item> 
  	</style>

</resources>